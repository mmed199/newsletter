<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsLetter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsLetter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsLetter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsLetter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="red" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:textSize">30sp</item>
        <item name="android:backgroundTint" >@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:backgroundTint" >@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="azure" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="android:backgroundTint" >@color/azure</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>